<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>BestPeerUI.html</welcome-file>
  </welcome-file-list>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>loginServlet</servlet-name>
    <servlet-class>sg.edu.nus.ui.server.LoginServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>loginServlet</servlet-name>
    <url-pattern>/bestpeerui/login</url-pattern>       
  </servlet-mapping>

  <servlet>
    <servlet-name>BestPeerServlet</servlet-name>
    <servlet-class>sg.edu.nus.ui.server.BestPeerServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>BestPeerServlet</servlet-name>
    <url-pattern>/bestpeerui/bestpeerservlet</url-pattern>
  </servlet-mapping>
  
</web-app>
